{% extends "layout.jinja2" %}

{% block content %}
<div class="content">
<h1>Agent Detail</h1>

<table border='1'>

    <tr>
      <th>No.</th>
      <td>{{agent.id}}</td>
    </tr>
    <tr>
      <th>Name</th>
        <td>{{agent.name}}</td>
    </tr>
    <tr>
      <th>Agency</th>
        <td>
          <a href="{{request.route_url('agency_detail', agencyid=agent.agency.id)}}">
            {{agent.agency.name}}
          </a>
        </td>
    </tr>
    <tr>
      <th>Jobs</th>
      <td>
        <ul>
          {% for job in agent.jobs %}
            <li>
              <a href="{{request.route_url('job_detail', jobid=job.id)}}">
                {{job.title}} ({{job.status.description}})
              </a>
            </li>
          {% endfor %}
        </ul>
      </td>
    </tr>
    <tr>
      <th>Notes</th>
      <td>
        <ul>
        {% for note in agent.job_notes %}
          <li>
            {{note.adddate.date()}} -
            <a href="{{request.route_url('job_detail', jobid=note.job.id)}}">{{note.job.title}}</a> -
            {{note.data}}
          </li>
        {% endfor %}
        </ul>
      </td>
    </tr>

</table>

</div>
{% endblock content %}
