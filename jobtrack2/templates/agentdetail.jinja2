{% extends "layout.jinja2" %}

{% block content %}
<div class="content">
<h1>Agent Detail</h1>

<table class="table table-dark table-sm">
  <tbody>
    <tr>
      <th scope="row">No.</th>
      <td>{{agent.id}}</td>
    </tr>
    <tr>
      <th scope="row">Name</th>
        <td>{{agent.name}}</td>
    </tr>
    <tr>
      <th scope="row">Agency</th>
        <td>
          <a href="{{request.route_url('agency_detail', agencyid=agent.agency.id)}}">
            {{agent.agency.name}}
          </a>
        </td>
    </tr>
    <tr>
      <th scope="row">Jobs</th>
      <td>
        <ul>
          {% for job in agent.jobs %}
            <li>
              <a href="{{request.route_url('job_detail', jobid=job.id)}}">
                {{job.title}} ({{job.status.description}})
              </a>
            </li>
          {% endfor %}
          <li><a href="{{request.route_url('job_add', _query={'agentid':agent.id, 'agencyid':agent.agency.id}) }}"><button type="button" class="btn btn-dark btn-sm">Add</button></a></li>
        </ul>
      </td>
    </tr>
    <tr>
      <th>Notes</th>
      <td>
        <ul>
          {% for note in agent.job_notes %}
            <li>
              {{note.adddate.date()}} -
              <a href="{{request.route_url('job_detail', jobid=note.job.id)}}">{{note.job.title}}</a> -
              {{note.data}}
            </li>
          {% endfor %}
        </ul>
      </td>
    </tr>
  </tbody>
</table>
<a href="{{request.route_url('agent_edit', agentid=agent.id)}}"><button type="button" class="btn btn-dark">Edit</button></a>

</div>
{% endblock content %}
