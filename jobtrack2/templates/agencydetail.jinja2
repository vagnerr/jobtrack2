{% extends "layout.jinja2" %}

{% block content %}
<div class="content">

<h1>Agency Detail</h1>
<table class="table table-dark table-sm">
  <tbody>
    <tr>
      <th scope="row">No.</th>
      <td>{{agency.id}}</td>
    </tr>
    <tr>
      <th scope="row">Name</th>
        <td>{{agency.name}}</td>
    </tr>
    <tr>
      <th scope="row">Agents</th>
      <td>
        <ul>
          {% for agent in agency.agents %}
            <li><a href="{{request.route_url('agent_detail', agentid=agent.id)}}">{{agent.name}}</a></li>
          {% endfor %}
          <li><a href="{{request.route_url('agent_add', _query={'agencyid':agency.id}) }}"><button type="button" class="btn btn-dark btn-sm">Add</button></a></li>
        </ul>

      </td>
    </tr>
    <tr>
      <th scope="row">Jobs</th>
      <td>
        <ul>
          {% for job in agency.jobs %}
            <li>
              <a href="{{request.route_url('job_detail', jobid=job.id)}}">
                {{job.title}} ({{job.status.description}})
              </a>
            </li>
          {% endfor %}
        </ul>
      </td>
    </tr>
  </tbody>
</table>
<a href="{{request.route_url('agency_edit', agencyid=agency.id)}}"><button type="button" class="btn btn-dark">Edit</button></a>

</div>
{% endblock content %}
