{% extends "layout.jinja2" %}

{% block content %}
<div class="content">
<h1>Company Detail</h1>

<table border='1'>

    <tr>
      <th>No.</th>
      <td>{{company.id}}</td>
    </tr>
    <tr>
      <th>Name</th>
        <td>{{company.name}}</td>
    </tr>
    <tr>
      <th>Jobs</th>
      <td>
        <ul>
          {% for job in company.jobs %}
            <li>
              <a href="{{request.route_url('job_detail', jobid=job.id)}}">
                {{job.title}} ({{job.status.description}})
              </a>
            </li>
          {% endfor %}
        </ul>
      <td>
    </tr>

</table>

</div>
{% endblock content %}
